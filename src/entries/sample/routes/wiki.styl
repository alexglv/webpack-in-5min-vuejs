/**
 * wiki.styl
 */

#wiki-container
	width: 100%
	height: 100%
	set-flex()
	set-flex-order-column()
	set-flex-justify-start()
	set-flex-align-center()
	background-color: #ebebeb

#search-box
	width: 100%
	set-flex()
	set-flex-order-column()
	set-flex-justify-start()
	set-flex-align-center()
	margin-bottom: 1em

#search-result-list-wrapper
	set-flex()
	set-flex-order-column(wrap)
	set-flex-justify-start()
	set-flex-align-start()

#keywords
	margin-top: 10px
	width: 260px
	height: 1.2rem
	font-size: 1.02rem

#searching
	margin-top: 10px

#search-result-list-box
	margin-top: 10px


.switch-search-result-list-move
	transition: transform .3s

